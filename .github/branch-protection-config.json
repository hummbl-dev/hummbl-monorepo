    "allowDeletions": false,
    "allowForcePushes": false,
    "blockCreations": false,
    "requireLinearHistory": false,
    "allowForkSyncing": true,
    "lockBranch": false,
    "requireConversationResolution": true
  },
  "metadata": {
    "description": "Branch protection configuration for HUMMBL monorepo main branch",
    "version": "1.1.0",
    "lastUpdated": "2026-02-05",
    "appliedBy": "copilot-agent",
    "reviewCycle": "quarterly",
    "changes": [
      "Updated status check contexts to match CI job names",
      "Enabled required approving reviews (1)",
      "Enabled dismiss stale reviews",
      "Enabled require code owner reviews",
      "Enabled administrator enforcement",
      "Disabled branch deletions",
      "Disabled force pushes",
      "Enabled require conversation resolution"
    ]
  }
