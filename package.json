{
  "name": "@hummbl/monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "dev:all": "node dev-setup.js",
    "build": "turbo build",
    "test": "turbo test",
    "test:ci": "turbo run test --filter=!hummbl-io -- --reporter=dot",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "format:check": "prettier --check .",
    "validate": "turbo lint type-check test build",
    "env-check": "node env-check.js",
    "report": "node daily-progress.js",
    "auto-report": "node auto-report.js",
    "enhanced-report": "node enhanced-report.js",
    "benchmark": "node benchmark.js",
    "bundle-size": "turbo bundle-size",
    "bundle:analyze": "turbo build:analyze",
    "validate-models": "node validate-models.js",
    "test:e2e": "pnpm --filter @hummbl/tests test:e2e",
    "test:coverage": "pnpm --filter @hummbl/tests test:coverage",
    "regression-test": "node performance-regression.js",
    "coverage-report": "node coverage-report.js",
    "validate-templates": "node template-validator.js",
    "test-advanced-mcp": "node test-advanced-mcp.js",
    "health-check": "node monitoring/health-check.js",
    "check-alerts": "node monitoring/alert-system.js"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9.17.0",
    "markdownlint-cli": "^0.47.0",
    "prettier": "^3.4.2",
    "turbo": "^2.7.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.14.4",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "overrides": {
      "preact": "^10.28.2",
      "@isaacs/brace-expansion": ">=5.0.1",
      "qs": ">=6.14.2",
      "markdown-it": ">=14.1.1",
      "jws": ">=3.2.3",
      "lodash-es": ">=4.17.23",
      "js-yaml": ">=4.1.1",
      "undici": ">=7.18.2",
      "aws-cdk-lib": ">=2.189.0"
    }
  }
}
