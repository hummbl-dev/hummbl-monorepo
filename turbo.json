{
  "tasks": {
    "build": { "dependsOn": ["^build"], "outputs": ["dist/**"] },
    "build:analyze": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "dist/bundle-analysis.html"]
    },
    "bundle-size": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "test": {},
    "lint": {},
    "type-check": { "dependsOn": ["^build"] },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "PORT", "WORKER_URL"]
    }
  },
  "globalEnv": ["NODE_ENV"],
  "globalPassThroughEnv": ["WORKER_URL", "PORT"]
}
