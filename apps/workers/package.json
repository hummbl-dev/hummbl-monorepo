  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251205.0",
    "@types/node": "^24.10.1",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8",
    "wrangler": "^4.53.0",
    "@hummbl/tsconfig": "workspace:*",
    "@hummbl/eslint-config": "workspace:*"
  }
}
