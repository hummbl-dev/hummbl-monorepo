{
  "name": "@hummbl/workers",
  "version": "1.0.0",
  "private": true,
  "description": "Cloudflare Workers REST API for HUMMBL Base120 mental models",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
